{
  "name": "reservation",
  "activities": [
    {
      "name": "start",
      "type": "FormActivity",
      "form": {
        "controls": [
          {
            "type": "paper-header",
            "label": "Reservation - Personal Details",
            "name": "header"
          },
          {
            "type": "paper-input",
            "label": "Firsname",
            "name": "firstname",
            "placeholder": "Please enter your firstname"
          },
          {
            "type": "paper-input",
            "label": "Surname",
            "name": "surname",
            "placeholder": "Please enter your surname"
          },
          {
            "type": "paper-button",
            "label": "Select Hotel",
            "name": "select_hotel",
            "style": "btn btn-outline-info",
            "nextActivity": "select-hotel"
          }
        ]
      }
    },
    {
      "name": "select-hotel",
      "type": "FormActivity",
      "form": {
        "controls": [
          {
            "type": "paper-header",
            "label": "Reservation - Hotel",
            "name": "header"
          },
          {
            "type": "magic-input",
            "label": "Hotel",
            "name": "hotel",
            "placeholder": "Please enter your hotel"
          },
          {
            "type": "nova-input",
            "label": "Room Number",
            "name": "roomNumber",
            "placeholder": "Please enter your room number"
          },
          {
            "type": "paper-button",
            "label": "<< Back",
            "name": "personal_details",
            "style": "btn btn-outline-danger",
            "nextActivity": "start"
          },
          {
            "type": "paper-button",
            "label": "Pay",
            "name": "make_payment",
            "style": "btn btn-outline-success",
            "nextActivity": "payment-confirmation"
          }
        ]
      }
    },
    {
      "name": "payment-confirmation",
      "type": "FormActivity",
      "form": {
        "controls": [
          {
            "type": "paper-header",
            "label": "Reservation - Confirmation",
            "name": "header"
          },
          {
            "type": "paper-label",
            "label": "Welcome {{firstname}} {{surname}}, your reservation at the {{hotel}} is confirmed!!",
            "name": "confirmation"
          },
          {
            "type": "paper-input",
            "label": "Message",
            "name": "message",
            "placeholder": "Please enter your message"
          },
          {
            "type": "paper-label",
            "label": "Your message: {{message}}",
            "name": "message-label"
          }
        ]
      }
    }
  ]
}